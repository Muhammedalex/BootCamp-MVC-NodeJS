<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-md-6 offset-md-3">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
            <label for="title" class="form-label"> Title Camp </label>
            <input id="title" name="campground[title]" placeholder="new Camp" class="form-control" value="<%= campground.title %>" required />
            </div>
            <div class="mb-3">
            <label for="location" class="form-label"> Locat Camp </label>
            <input id="location" name="campground[location]" placeholder="example:new jersy,NewYork" class="form-control" value="<%= campground.location %>" required/>
        </div>
        <div class="input-group mb-3">
            <label class="input-group-text" for="inputGroupFile02"></label>
            <input type="file" class="form-control" id="inputGroupFile02" name="image" multiple />
          </div>
        <div class="mb-3">
            <label for="price" class="form-label"> Price Per Night </label>
            <div class="input-group">
                <span class="input-group-text">$</span>
            <input id="price" type="text" class="form-control" aria-label="price-label" placeholder="0.00" value="<%= campground.price %>" required  name="campground[price]" /> 
            </div>
          </div>
        <div class="mb-3">
            <label for="description" class="form-label"> Description </label>
            <textarea required id="description" name="campground[description]" class="form-control">
                <%= campground.description %>
            </textarea>
        </div>
        <div class="mb-3">
            <% campground.images.forEach(function(img, i) { %>
                <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="" />
                <div class="form-check-inline">
                    <input type="checkbox" id="image-<%= i %>" name="deleteImage[]" value="<%= img.filename %>">
                </div>
                <label for="image-<%= i %>">Delete?</label>
            <% }) %>    
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-info"> Update Campground</button>
            <a href="/campgrounds/<%= campground._id %>" class="btn btn-warning">Cancel</a>
        </div>
        </form>
    </div>
</div>